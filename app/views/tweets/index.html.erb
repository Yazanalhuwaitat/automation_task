<h1>Tweets Listing Page</h1>
<%= flash[:notice] %>


<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody style="text-align: center">
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.username %></td>
        <td><%= tweet.password %></td>
        <td><strong><%= link_to 'Show', tweet_path(tweet) %></strong></td>
        <td><strong><%= link_to 'Update', edit_tweet_path(tweet) %></strong></td>
        <td><%= button_to 'Delete', tweet_path(tweet), method: :delete%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><strong><%= link_to 'Create new tweet', new_tweet_path %></strong></p>

